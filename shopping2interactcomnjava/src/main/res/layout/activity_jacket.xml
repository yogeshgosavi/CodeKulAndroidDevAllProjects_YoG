<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jacketActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drj"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:gravity="center"
            android:text="DoubleRiderJacket"
            android:textStyle="italic"
            android:textSize="20sp"
            android:background="@color/textback"
            android:elevation="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bfj"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Bomber Flight Jacket"
            android:textStyle="italic"
            android:textSize="20sp"
            android:background="@color/textback"
            android:elevation="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mrj"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Moto Racer Jacket"
            android:textStyle="italic"
            android:textSize="20sp"
            android:background="@color/textback"
            android:elevation="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vj"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Varsity Jacket"
            android:textStyle="italic"
            android:textSize="20sp"
            android:background="@color/textback"
            android:elevation="2dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnbackJacket"
            android:text="back"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.2"
            />
    </LinearLayout>

</LinearLayout>